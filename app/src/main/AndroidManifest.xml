<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.sch.smktelkom_mlg.project.xiirpl104142434.tasksreminder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddTask" />
        <activity android:name=".AddSubject" />
        <activity android:name=".SecondActivitySubject" />
        <activity
            android:name=".ListSubject"
            android:label="@string/title_activity_list_subject"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListTask"
            android:label="@string/title_activity_list_task"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SecondActivity"></activity>
    </application>

</manifest>